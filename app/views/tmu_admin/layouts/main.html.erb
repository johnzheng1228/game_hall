<html>
<head>
  <title>天幕科技</title>
  <%= stylesheet_link_tag "tmu_admin/themes/default/easyui" %>
  <%= stylesheet_link_tag "tmu_admin/themes/icon" %>
  <%= stylesheet_link_tag "tmu_admin/themes/main" %>
  <%= javascript_include_tag "application" %>
  <script type="text/javascript">
  $(function () {
    $(window).resize(function () {
      $('#main-layout').layout('resize');
    });
  });
  </script>
</head>
<body class="easyui-layout">
  <div data-options="region:'north',border:false" style="height:50px; padding-left:20px;line-height:50px;">
    <div style="float:right;padding-right: 100px"><%= link_to '退 出', tmu_admin_user_session_path, :method => "delete", :data =>{:confirm => "您确定要退出吗？" } %></div>
    <div style="height:50px;line-height:50px;float:left;font-size:30px;">天幕管理平台</div>
  </div>
  <div data-options="region:'west',title:'导航菜单',iconCls:'icon-settings'" style="width:200px;">
    <%= render :partial => '/tmu_admin/layouts/left_navigation' %>
  </div>
  <div data-options="region:'center'">
    <div id="tabs" class="easyui-tabs" data-options="fit:true,border:false">
      <%= yield %>
    </div>
    <div id="mm" class="easyui-menu 您确定要退出吗？cs-tab-menu">
      <div id="mm-tabupdate">刷新</div>
      <div class="menu-sep"></div>
      <div id="mm-tabclose">关闭当前标签</div>
      <div id="mm-tabcloseright">关闭右侧标签</div>
      <div id="mm-tabcloseleft">关闭左侧标签</div>
      <div id="mm-tabcloseother">关闭其他标签</div>
      <div id="mm-tabcloseall">关闭全部标签</div>
      <div id="mm-exit">退出</div>
    </div>
    <div region="south" style="text-align:center;height:30px;background:#95B8E7;padding:10px">
      Copyright © 2010-2013 www.tmu.com
    </div>
  </div>
</body>
</html>
